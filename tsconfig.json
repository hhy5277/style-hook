{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "jsx": "preserve",
    "strict": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  }
}
